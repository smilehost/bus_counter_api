generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Models are defined here: https://pris.ly/d/data-modeling

model installed_device {
  installed_id          Int            @id @default(autoincrement())
  installed_device_name String
  installed_device_uid  String
  installed_bus_id      Int
  installed_com_id      Int
  installed_access_key  String
  counter               counter[]
  cameraGroups          camera_group[]
  created_at            DateTime       @default(now())
  updated_at            DateTime       @updatedAt
  deleted_at            DateTime?
}

model counter {
  counter_id                  Int              @id @default(autoincrement())
  counter_in_count            Int
  counter_out_count           Int
  counter_door_open_datetime  DateTime?
  counter_door_close_datetime DateTime?
  counter_bus_id              Int
  counter_door_number         Int
  counter_installed_device_id Int
  installed_device            installed_device @relation(fields: [counter_installed_device_id], references: [installed_id])
  counter_com_id              Int
  counter_lat                 String
  counter_lng                 String
  counter_busround_id         Int?
  face                        face[]
  created_at                  DateTime         @default(now())
  updated_at                  DateTime         @updatedAt
  deleted_at                  DateTime?
}

model face {
  face_id    Int       @id @default(autoincrement())
  counter_id Int
  gender     Gender
  age        Float
  counter    counter   @relation(fields: [counter_id], references: [counter_id])
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?
}

model camera_group {
  camera_group_id                  Int              @id @default(autoincrement())
  camera_group_installed_device_id Int
  installed_device                 installed_device @relation(fields: [camera_group_installed_device_id], references: [installed_id])
  camera_group_door_number         String           @db.VarChar(10)
  camera_group_camera_status       Int
  camera_group_camera_top_uid      String           @db.VarChar(50)
  camera_group_camera_face_uid     String           @db.VarChar(50)
  created_at                       DateTime         @default(now())
  updated_at                       DateTime         @updatedAt
  deleted_at                       DateTime?
}

// Enums an be defined here
enum Gender {
  Male
  Female
}
