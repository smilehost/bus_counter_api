{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Bus Counter API",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/cmd/main.js",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "restart": true,
      "runtimeExecutable": "node",
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Debug with Nodemon",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/cmd/main.js",
      "runtimeExecutable": "nodemon",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "restart": true,
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}